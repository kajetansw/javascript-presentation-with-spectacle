---
"extends":
  - "formidable/configurations/es6-react"

"rules":
  "func-style": 0
  "indent": [2, 2, {"SwitchCase": 1}]
  "max-len": 0
  "no-magic-numbers": 0
  "no-multi-spaces": 0
  "object-property-newline": 0
  "react/self-closing-comp": 0
  "space-before-function-paren": 0
  "react/prefer-es6-class": 0
  "react/no-multi-comp": 0
  "quotes": [2, "single"]
  "no-console": "warn"
"env":
  "browser": true,
  "node": true
"globals":
  "afterEach": true,
  "describe": true,
  "expect": true,
  "it": true,
  "jest": true,
  "test": true
